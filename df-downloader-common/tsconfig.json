{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
